# ==========================================
# AI-SaaS 环境变量配置
# ==========================================

# ==========================================
# 数据库配置 (Supabase)
# ==========================================
# 从 Supabase Dashboard > Settings > Database > Connection string 获取
# 格式: postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxx.supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.xxxxxx.supabase.co:5432/postgres"

# Supabase API配置（可选，如果使用Supabase客户端）
NEXT_PUBLIC_SUPABASE_URL="https://xxxxxx.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ==========================================
# NextAuth 认证配置
# ==========================================
# 生成方法: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# ==========================================
# OAuth 提供商 (Google)
# ==========================================
# 从 Google Cloud Console 获取
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ==========================================
# 支付配置 (PayPal)
# ==========================================
# 开发环境 (沙箱):
#   1. 访问 https://developer.paypal.com/dashboard/
#   2. 创建沙箱应用
#   3. 获取Client ID和Secret (以sb-开头)
# 
# 生产环境:
#   1. 访问 https://www.paypal.com/businessmanage/account/aboutBusiness
#   2. 设置 → API访问权限 → 创建应用
#   3. 获取Live Client ID和Secret (以AX/EL开头)
#   4. 将PAYPAL_MODE改为"live"
# 
# 详细说明: 查看 docs/PAYPAL_PRODUCTION_SETUP.md

PAYPAL_MODE="sandbox"                          # 开发: sandbox | 生产: live
PAYPAL_CLIENT_ID="your-paypal-client-id"       # 沙箱: sb-xxx | 生产: AXxxx
PAYPAL_CLIENT_SECRET="your-paypal-secret"      # 沙箱: xxx | 生产: ELxxx

# PayPal公开密钥（用于前端SDK）
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id"  # 与上面的CLIENT_ID相同

# PayPal Webhook (可选，用于接收支付通知)
PAYPAL_WEBHOOK_ID="your-webhook-id"

# ==========================================
# 支付配置 (Stripe - 可选)
# ==========================================
# 从 Stripe Dashboard 获取
# https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLIC_KEY="pk_test_xxx"
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# ==========================================
# 外部API配置
# ==========================================
# Serper.dev API (Reddit搜索)
SERPER_API_KEY="66c8fcd3f7280a42e045cce7193382a6fd64125a"
SERPER_API_URL="https://google.serper.dev/search"
SERPER_TIMEOUT="10000"

# 腾讯ADP
TENCENT_ADP_APP_KEY="your-adp-app-key"
TENCENT_ADP_API_URL="https://adp.tencent.com/api/chat"

# ==========================================
# Redis 配置 (可选，用于缓存和限流)
# ==========================================
# 可以使用 Upstash Redis 免费层
# https://upstash.com/
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# ==========================================
# 应用配置
# ==========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
